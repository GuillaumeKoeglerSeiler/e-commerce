{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="body_form">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1>Connectez-vous !</h1>
        
            <label for="inputEmail" class="input_form">Email</label><br>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus><br>
            <label for="inputPassword" class="input_form">Mot de passe</label><br>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required><br>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >


            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-danger" type="submit">
                Connexion
            </button>
    </form><br>
</div>
<h2 class="register_link"><a href="{{ path('app_register') }}">Vous n'avez pas encore de compte ? Alors venez vous inscrire !</a></h2>
{% endblock %}
